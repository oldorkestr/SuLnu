@model SuLnu.Models.EventViewModel

@{
    ViewData["Title"] = "Create Event";
}
<div>
    <video autoplay muted loop id="tm-bg">
        <source src="~/videos/video.mp4" type="video/mp4">
    </video>
</div>
<div id="tm-wrap">
    <div class="tm-main-content">
        <div class="container tm-site-header-container" style="margin-top:150px; background: #2c0c58;color: #a9a9a9; width:35%; text-align:center;">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                    <h1>Create event</h1>
                    <form asp-action="CreateEvent" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FormOfHolding" class="control-label"></label>
                            <input asp-for="FormOfHolding" class="form-control" />
                            <span asp-validation-for="FormOfHolding" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Location" class="control-label"></label>
                            <input asp-for="Location" class="form-control" />
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ProfilePhotoFilePath" class="form-control-file" placeholder="Profile photo" />
                            <span asp-validation-for="ProfilePhotoFilePath" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="EventType" class="control-label"></label>
                            <input asp-for="EventType" class="form-control" />
                            <span asp-validation-for="EventType" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <span asp-validation-for="FacultyName" class="text-danger"></span>
                            <label asp-for="FacultyName" class="control-label"></label>
                            @Html.DropDownListFor(m => m.FacultyName, ViewBag.faculties as SelectList, "Faculty", new { @class = "form-control", @style = "width: auto; padding: 0" })
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Create event" class="button" />
                        </div>
                    </form>
                    <a asp-action="AllEvents">Back to List</a>
                    <h2>&nbsp;</h2>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}